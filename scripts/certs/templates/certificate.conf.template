[req]
default_bits = 4096
prompt = no
default_md = sha256
req_extensions = req_ext
distinguished_name = dn
[dn]
C = <COUNTRY>
ST = <STATE>
L = <LOCALITY>
OU = <ORGANIZATION>
CN = localhost
[req_ext]
subjectAltName = @alt_names
[alt_names]
DNS.1 = localhost
DNS.2 = mosquitto
IP.1 = ::1
IP.2 = 127.0.0.1
IP.3 = 0.0.0.0
IP.4 = <IP_ADDRESS>